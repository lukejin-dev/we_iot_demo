<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

   <LinearLayout
        android:id="@+id/services_browser_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

               <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
       
       
        <include layout="@layout/simple_key_fragment" 
            android:layout_below="@+id/textView0"/>

             <TextView
                android:id="@+id/textView0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:text="Simple Keys"
                android:textAppearance="?android:attr/textAppearanceLarge" />
             
             </RelativeLayout>
        
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/accelerometerTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView1"
                android:drawableLeft="@drawable/accelerometer"
                android:gravity="center"
                android:padding="15dp"
                android:text="x:\ny:\nz:\n"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:text="Accelerometer"
                android:textAppearance="?android:attr/textAppearanceLarge" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/magnetometerTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView2"
                android:drawableLeft="@drawable/sensortag_magnetometer"
                android:gravity="center"
                android:padding="15dp"
                android:text="x:\ny:\nz:\n"
                android:textSize="22sp" />
            
            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:text="Magnetometer"
                android:textAppearance="?android:attr/textAppearanceLarge" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

        <TextView android:padding="15dp"
        	android:id="@+id/gyroscopeTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView3"
                android:drawableLeft="@drawable/gyroscope"
	    android:textSize="22sp" 
            android:gravity="center"
            android:text="x:\ny:\nz:\n" />
        
                    <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:text="Gyroscope"
                android:textAppearance="?android:attr/textAppearanceLarge" />
        
                    </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
        
        <TextView android:padding="15dp"
        	android:id="@+id/ir_temperature"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView4"
            android:drawableLeft="@drawable/irtemperature"
	    android:textSize="22sp" 
            android:gravity="center"
            android:text="°C" />
        
                            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:text="Object temperature"
                android:textAppearance="?android:attr/textAppearanceLarge" />
        
                            </RelativeLayout>
                            
<RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
        
        <TextView android:padding="15dp"
        	android:id="@+id/ambientTemperatureTxt"	
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView5"
            android:drawableLeft="@drawable/temperature"
	    android:textSize="22sp" 
            android:gravity="center"
            android:text="°C" />

        <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:text="Ambient temperature"
                android:textAppearance="?android:attr/textAppearanceLarge" />
        
        </RelativeLayout>
        
<RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

        <TextView android:padding="15dp"
        	android:id="@+id/humidityTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView6"
	    android:textSize="22sp" 
            android:drawableLeft="@drawable/humidity"
            android:gravity="center"
            android:text="%rH" />
        
        <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:text="Humidity"
                android:textAppearance="?android:attr/textAppearanceLarge" />
        
        </RelativeLayout>
        
<RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

        <TextView android:padding="15dp"
        	android:id="@+id/barometerTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView7"
	    android:textSize="22sp" 
            android:drawableLeft="@drawable/barometer"
            android:gravity="center"
            android:text="Pa" />
        
        <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:text="Barometer"
                android:textAppearance="?android:attr/textAppearanceLarge" />
        
        </RelativeLayout>


    </LinearLayout>

</ScrollView>
